#include <stdio.h>
#include <stdlib.h>
int main()
{
    char name[50];
    char address[50];
    int matric;
    int dateOfbirth;
    int icNum;
    int mark;
    float gradeValue1, gradeValue2, gradeValue3, gradeValue4;
	float totalgradeValue1, totalgradeValue2,  totalgradeValue3,  totalgradeValue4;
	float totalgradeValue;
	float GPA;
	
	
	puts("++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++"); 
	puts("+                                                       WELCOME                                                        +");
	puts("+                                         THIS IS A PROGRAM THAT CALCULATE GPA                                         +");
	puts("+                                                                                                                      +");
	puts("+----------------------------------------------------------------------------------------------------------------------+");
	
	puts("++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++"); 
	puts("+                                                                                                                      +");
	puts("+                                                STUDENT INFORMATION                                                   +");
	puts("+                                                                                                                      +");
	puts("+----------------------------------------------------------------------------------------------------------------------+");
  
    printf("\n\nPlease press 'Enter' to fill in your informations \n");
    
	printf("Name:");
    gets(name);
    
	printf("Address:");
	gets(address);
    
	printf("Matric no:");
    scanf("%d",&matric);
    
	printf("Date of birth(ddmmyy):");
    scanf("%d",&dateOfbirth);
    
	printf("IC no (without '-'):");
    scanf("%d",&icNum);
	
	puts("+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++"); 
	puts("+                                                                                                                       +");
	puts("+                                                 GPA CALCULATION                                                       +");
	puts("+                                                                                                                       +");
	puts("+-----------------------------------------------------------------------------------------------------------------------+");
  
    printf("\n\nEnter the marks for each subject\n");

	printf("\nSubject TMF1414:" );
    scanf("%d",&mark);

	if (mark>100)
		printf("Invalid value");
	else if(mark>=80)
		printf("The grade is A (4.00)");
	else if(mark>=75)
		printf("The grade is A- (3.67)");
	else if(mark>=70)
		printf("The grade is B+ (3.33)");
	else if(mark>=65)
		printf("The grade is B (3.00)");
	else if(mark>=60)
		printf("The grade is B- (2.67)");
	else if(mark>=55)
		printf("The grade is C+ (2.33)");
	else if(mark>=50)
		printf("The grade is C (2.00)");
	else if(mark>=45)
		printf("The grade is C- (1.50)");
	else if (mark>=40)
		printf("The grade is D (1.00)");
	else if (mark<=40)
		printf("The grade is F (0)");

	printf("\nSubject TMF1814:");
	scanf("%d",&mark);

	if (mark>100)
		printf("Invalid value");
	else if(mark>=80)
		printf("The grade is A (4.00)");
	else if(mark>=75)
		printf("The grade is A- (3.67)");
	else if(mark>=70)
		printf("The grade is B+ (3.33)");
	else if(mark>=65)
		printf("The grade is B (3.00)");
	else if(mark>=60)
		printf("The grade is B- (2.67)");
	else if(mark>=55)
		printf("The grade is C+ (2.33)");
	else if(mark>=50)
		printf("The grade is C (2.00)");
	else if(mark>=45)
		printf("The grade is C- (1.50)");
	else if (mark>=40)
		printf("The grade is D (1.00)");
	else if (mark<=40)
		printf("The grade is F (0)");

	printf("\nSubject TMF1014:");
	scanf("%d",&mark);

	if (mark>100)
		printf("Invalid value");
	else if(mark>=80)
		printf("The grade is A (4.00)");
	else if(mark>=75)
		printf("The grade is A- (3.67)");
	else if(mark>=70)
		printf("The grade is B+ (3.33)");
	else if(mark>=65)
		printf("The grade is B (3.00)");
	else if(mark>=60)
		printf("The grade is B- (2.67)");
	else if(mark>=55)
		printf("The grade is C+ (2.33)");
	else if(mark>=50)
		printf("The grade is C (2.00)");
	else if(mark>=45)
		printf("The grade is C- (1.50)");
	else if (mark>=40)
		printf("The grade is D (1.00)");
	else if (mark<=40)
		printf("The grade is F (0)");

	printf("\nSubject MPU3222:");
	scanf("%d",&mark);
	
	if (mark>100)
		printf("Invalid value");
	else if(mark>=80)
		printf("The grade is A (4.00)");
	else if(mark>=75)
		printf("The grade is A- (3.67)");
	else if(mark>=70)
		printf("The grade is B+ (3.33)");
	else if(mark>=65)
		printf("The grade is B (3.00)");
	else if(mark>=60)
		printf("The grade is B- (2.67)");
	else if(mark>=55)
		printf("The grade is C+ (2.33)");
	else if(mark>=50)
		printf("The grade is C (2.00)");
	else if(mark>=45)
		printf("The grade is C- (1.50)");
	else if (mark>=40)
		printf("The grade is D (1.00)");
	else if (mark<=40)
		printf("The grade is F (0)");

	printf("\n\n\nEnter grade value for each subject\nNOTE : Grade value is in the '()' given !\n");

	printf("\n\nGrade value for subject TMF1414:");
	scanf("%f",&gradeValue1);

	printf("\nGrade value for subject TMF1814:");
	scanf("%f",&gradeValue2);

	printf("\nGrade value for subject TMF1014:");
	scanf("%f",&gradeValue3);
	
	printf("\nGrade value for subject MPU3222:");
	scanf("%f",&gradeValue4);

		totalgradeValue1 = 3 * gradeValue1;
		totalgradeValue2 = 3 * gradeValue2;
		totalgradeValue3 = 3 * gradeValue3;
		totalgradeValue4 = 3 * gradeValue4;
		totalgradeValue = totalgradeValue1 + totalgradeValue2 + totalgradeValue3 + totalgradeValue4;
		GPA = totalgradeValue / 12;
		
	puts("+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++"); 
	puts("+                                                                                                                       +");
	puts("+                                                YOUR GPA                                                               +");
	puts("+                                                                                                                       +");
	puts("+-----------------------------------------------------------------------------------------------------------------------+");

	printf("\n\n\nTotal Grade Value is %.2f\n",totalgradeValue);
	printf("\a\a\a\aYour GPA is %.2f\n\n\n\n\n",GPA);

    return 0;
}
